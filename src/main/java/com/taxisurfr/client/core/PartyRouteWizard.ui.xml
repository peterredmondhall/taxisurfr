<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" styleName="wizard">
		<g:FlowPanel ui:field="header" styleName="header" />
		<g:HTMLPanel styleName="progress-wrapper">
			<g:HTML ui:field="progressBar" styleName="progress-bar"/>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="main">
			<g:HTMLPanel ui:field="steps" styleName="main-content" />
		</g:HTMLPanel>
		
		<div class="footer">
			<g:Button ui:field="prev" text="Previous" styleName="btn btn-primary" />
			<g:Button ui:field="next" text="Next" styleName="btn btn-primary" />
			<g:Button ui:field="cancel" text="Cancel" styleName="btn btn-primary" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 