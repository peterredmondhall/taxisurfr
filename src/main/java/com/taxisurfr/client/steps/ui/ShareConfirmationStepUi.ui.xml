<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<ui:with field='messages' type='com.taxisurfr.client.resources.ClientMessages' />

	<ui:style>
		.labelDiv {
			display: inline;
			float: left;
			font-size: 14px;
			margin-top: 2px;
			text-align: right;
			margin-right: 15px;
			width: 300px;
	}
	</ui:style>


	<g:HTMLPanel ui:field="mainPanel">
	    <g:Label ui:field="label1"/>
		<g:Label ui:field="label2"/>
		
		
				<g:Grid>
			<!-- Name -->
			<g:row >
				<g:customCell styleName="{style.labelDiv}">
					<g:Label>Name</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelName" />
				</g:customCell>
			</g:row>
			
			<g:row >
				<g:customCell styleName="{style.labelDiv}">
					<g:Label>Email</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelEmail" />
				</g:customCell>
			</g:row>
			
			<!-- Hinfahrt von -->
			<g:row >
				<g:customCell styleName="{style.labelDiv}">
					<g:Label>Flight no.</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelFlightNo" />
				</g:customCell>
			</g:row>
			<g:row >
				<g:customCell styleName="{style.labelDiv}">
					<g:Label>Time of landing</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelLandingTime" />
				</g:customCell>
			</g:row>
						<!-- Abholung am von -->
			<!-- RÃ¼ckfahr von -->
			<g:row  >
				<g:customCell styleName="{style.labelDiv}">
					<g:Label ui:field="labelRPP">No. of passengers</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelPax" />
				</g:customCell>
			</g:row>
			<!-- Abholung am von -->
			<g:row  >
				<g:customCell styleName="{style.labelDiv}">
					<g:Label ui:field="labelRPT">No. of surfboards</g:Label>
				</g:customCell>
				<g:customCell>
					<g:Label ui:field="labelSurfboards" />
				</g:customCell>
			</g:row>
			<!-- Total no. passengers -->
													
		</g:Grid>
		
	</g:HTMLPanel>

</ui:UiBinder> 