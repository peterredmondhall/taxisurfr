<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<ui:with field='messages' type='com.taxisurfr.client.resources.ClientMessages' />
	<ui:style>
		.title { font-weight:bold; color: #62ba37; margin-bottom:
			10px; font-size:
			30px;}
		.desc { font-weight:bold; margin-bottom: 10px;
			font-size: 15px;}
		.image { margin-right: 10px;}

		.brd {
			border: 1px solid silver;
			margin-bottom:6px;
			width:767px;
		}
		.ratingspanel {
			border: 1px solid silver;
			padding: 2px;
			margin-bottom:6px;
			height:100px;
		}
		.tarea {
			width: 100%;
			max-width: 320px; /* Will be AT MOST 320px wide */
		}

	</ui:style>

	<g:HTMLPanel ui:field="mainPanel">

<g:VerticalPanel>
			<g:Image ui:field="imageSearch" url="images/banner.jpg" width="100%"/>			
			<g:HorizontalPanel ui:field="hp1" styleName="{style.brd}">
			<g:Label ui:field="instruction"/>
						
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="hp2" styleName="{style.brd}">
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="hp3" styleName="{style.brd}">
			</g:HorizontalPanel>
</g:VerticalPanel>
	</g:HTMLPanel>

</ui:UiBinder> 